<% layout("./layouts/boilerplate") %>
<div class="category">
  <div class="icon">
    <i class="fa-solid fa-fire"></i>
    <p>Trending</p>
  </div>
  <div class="icon">
    <i class="fa-regular fa-snowflake"></i>
    <p>Arctic</p>
  </div>
  <div class="icon">
    <i class="fa-solid fa-ship"></i>
    <p>Boathouse</p>
  </div>
  <div class="icon">
    <i class="fa-solid fa-bed"></i>
    <p>Rooms</p>
  </div>
  <div class="icon">
    <i class="fa-brands fa-fort-awesome"></i>
    <p>Castle</p>
  </div>
  <div class="icon">
    <i class="fa-solid fa-mountain-city"></i>
    <p>Mountain City</p>
  </div>
  <div class="icon">
    <i class="fa-solid fa-cow"></i>
    <p>farms</p>
  </div>
  <div class="icon">
    <i class="fa-solid fa-person-swimming"></i>
    <p>Amazing pool</p>
  </div>
  <div class="tax">
    <div class="form-check form-switch form-check-reverse">
      <input class="form-check-input" type="checkbox" id="tax" />
      <label class="form-check-label" for="tax">Price after taxes </label>
    </div>
  </div>
</div>
<br />
<div class="card-container row">
  <%for (listing of allListing){%>
  <div class="card col-xl-4 col-lg-4 col-md-4 col-sm-6 col-12 listing-card">
    <a class="card-link" href="/listings/<%=listing._id%>">
      <img
        class="card-image"
        src="<%=listing.image.url%>"
        alt="listing-image"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <b><p class="card-title"><%=listing.title%></p></b>
        <p class="card-text">
          <span>&#8377;<%=listing.price.toLocaleString("en-IN")%>/night</span
          ><span class="tax-info hide-tax"> <i>+ 18% gst</i></span>
        </p>
      </div>
    </a>
  </div>
  <%}%>
</div>
